{
  "name": "rotdrop/nextcloud-bav",
  "description": "Bank Account Validator",
  "type": "project",
  "license": "AGPL",
  "authors": [
    {
      "name": "Claus-Justus Heine"
    }
  ],
  "require": {
    "globalcitizen/php-iban": "^4.0",
    "phpxmlrpc/phpxmlrpc": "^4",
    "rotdrop/bav": "dev-master"
  },
  "require-dev": {
    "phpmd/phpmd" : "@stable",
    "squizlabs/php_codesniffer": "3.*",
    "zebra-north/phpcs-short-types": "^1.0"
  },
  "repositories": [
    {
      "type": "path",
      "url": "3rdparty/bav"
    },
    {
      "type": "path",
      "url": "3rdparty/php-index"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "classmap-authoritative": true,
    "platform": {
      "php": "8.1.0"
    },
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    }
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": true,
      "target-directory": "vendor-bin",
      "forward-command": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
